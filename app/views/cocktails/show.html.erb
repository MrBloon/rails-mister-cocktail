<div class="background">
  <%= render 'shared/navbar' %>
  <div class="container mt-5">
    <div class="row">
      <div class="col-12">
        <div class="card-product mb-3">
          <h2><%= @cocktail.name %></h2>
          <div class="d-flex justify-content-between">
            <%= image_tag "black-russian.jpg" %>
            <div class="d-flex flex-column justify-content-between w-100 ml-3">
              <div>
                <% @cocktail.doses.each do |dose| %>
                  <li class="list-group-item d-flex justify-content-between">
                    <div>
                      <%= dose.ingredient.name %> - <%= dose.description %>
                    </div>
                    <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
                      <i class="fa fa-trash destroy_dose"></i>
                    <% end %>
                  </li>
                <% end %>
              </div>
              <%= link_to 'Add an ingredient', new_cocktail_dose_path(@cocktail), class: "btn-orange align-self-start" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

